- @user = current_user
#edit-user.modal.fade
  .modal-dialog.col-sm-8.col-sm-offset-2.col-md-8.col-md-offset-2
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h4.modal-title Edit Account
      = form_for @user do |f|
        .modal-body
          .col-xs-12.row
            .field.col-xs-12
              = f.fields_for :pictures do |p|
                /= p.label :image
                = p.label 'Avatar'
                = p.file_field :image
          .col-xs-12.row
            .field.col-sm-6
              = f.label :username
              = f.text_field :username, class: "form-control", id: "register_username"
            .field.col-sm-6
              = f.label :email
              = f.text_field :email, class: "form-control"
            .field.col-sm-6
              = f.label :first_name
              = f.text_field :first_name, class: "form-control"
            .field.col-sm-6
              = f.label :last_name
              = f.text_field :last_name, class: "form-control"
            .field.col-sm-6
              = f.label :password
              = f.password_field :password, class: "form-control"
            .field.col-sm-6
              = f.label :password_confirmation
              = f.password_field :password_confirmation, class: "form-control"
          .col-xs-12.row
            .field.col-xs-12
              = f.label :job_title
              = f.text_field :job_title, class: "form-control"
          .col-xs-12.row
            .field.col-xs-12
              .checkbox
                = f.label :subscribe_to_newsletter do
                  = 'Subscribe to newsletter'
                  = f.check_box :subscribe_to_newsletter, class: "checkbox inline"
        .modal-footer
          .actions
            = f.submit 'Update', class: "btn btn-main"
