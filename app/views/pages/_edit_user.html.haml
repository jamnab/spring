- @user = current_user
#edit-user.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h4.modal-title Register
      = form_for @user do |f|
        .modal-body
          .row
            .field.col-xs-12
              =f.fields_for :pictures do |p|
                = p.label :image
                = p.file_field :image
        .modal-footer
          .actions
            = f.submit 'Update', class: "btn btn-main"
