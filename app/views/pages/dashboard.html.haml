.post-board
  = render 'post_board'

= content_for :popups do
  .test-modal
    - if @direct_post && @post
      %input{id: 'direct_post_id', name: 'direct_post_id', type: 'hidden', value: "#{@post.id}"}
      = render 'post_discussion'
  #new_post_form_wrapper
    = render 'new_post_form'
  .edit-modal
  = link_to '#', data: {target: "#new-post", toggle: "modal", content: "Create post", placement: "top", trigger: "hover"}, class: "btn popover-trigger", id: "new-post-toggler" do
    -#%span.fa.fa-plus
    = image_tag "create-icon.png"

/ .page-num{style: "visibility:hidden"}
/   = render 'next_post_page'
