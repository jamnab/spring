#edit-org.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h4.modal-title
          Edit Organization
      .slide-1 
        = form_for @organization, :html => { multipart: true }  do |f|
          .modal-body.row
            .field.col-xs-12
              = f.label :name
              = f.text_field :name, class: "form-control"
            .field.col-xs-12.nested_pics_form
              = f.fields_for :pictures do |p|
                = p.label :image
                = p.file_field :image
          .modal-footer
            .actions
              = f.submit 'Save', class: "btn btn-main"