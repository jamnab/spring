.admin-dashboard

  %h2 Listing users

  %table.table.table-striped
    %tr
      %th Username
      %th Email
      %th First name
      %th Last name
      %th
      %th
      %th
    - @users.each do |user|
      %tr
        %td= user.username
        %td= user.email
        %td= user.first_name
        %td= user.last_name
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' }
