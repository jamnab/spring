!!!
%html
  %head
    %title Collab
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-inverse{role: "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => "#navbar-collapse", "data-toggle" => "collapse", type: "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to root_path, class: "navbar-brand" do
            Collab
        #navbar-collapse.collapse.navbar-collapse
          %ul.nav.navbar-nav.navbar-right
            - if current_user
              - if current_organization && !current_organization.projects.empty?
                %li.dropdown
                  %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                    - if @project
                      = @project.name
                    - else
                      Projects
                    %span.caret
                  %ul.dropdown-menu{role: "menu"}
                    - current_organization.projects.each do |project|
                      %li
                        = link_to project.name, project
                - if @project
                  %li= link_to "Discussion", @project
                  %li= link_to "Management", management_project_path(@project)
              - else
                %li
                  %a
                    No Projects
              %li= link_to "My Organization", my_organization_user_path(current_user)
              %li= link_to "My Profile", current_user
              %li= link_to "Logout", :logout
            - else
              %li= link_to "Sign Up", new_user_path
              %li= link_to "Login", :login
    - if notice
      %p.text-center#notice= notice
    = yield
