%li.dropdown
  .circle.new-post-number.col-xs-1
    -if current_user
      - if current_user.is_admin?
        = sync_new partial: "notification", resource: Post.new
      - else
        = sync_new partial: "notification", resource: Post.new, scope: current_organization, resource: Post.new
    %p.number

  %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
    #sort-posts.option
      .text{style: "float:left;"}
        NEWEST
      %span.caret
  %ul.dropdown-menu{:role => "menu"}
    %li
      = link_to "NEWEST",dashboard_path(:sort => "newest",:query=>@query,:page=>@page,:viewmode=>@viewmode),remote: (request.path =="/dashboard"),class: "body-loading", :id =>"sort-post-newest"
