#register.modal.fade
  .green-trans
  .modal-dialog
    = image_tag "launchboard-square.png", class: "login-brand"
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h4.modal-title Sign Up
      = form_for BetaSignUp.new do |f|
        .modal-body
          .field
            = f.text_field :first_name, placeholder: 'first name', class: 'form-control user'
          .field
            = f.text_field :last_name, placeholder: 'last name', class: 'form-control user'
          .field
            = f.text_field :email, placeholder: 'your email', class: 'form-control email'
        .modal-footer
          .actions
            = f.submit 'Submit', class: "btn btn-main"



